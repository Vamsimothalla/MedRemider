<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable name="refill" type="com.perfex.medicineremainder.model.Refill"/>
    </data>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.event.RefillDetailActivity">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">
        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:background="@drawable/refillin_img"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:expandedTitleGravity="center_horizontal"
            app:collapsedTitleGravity="center_vertical"
            app:expandedTitleTextAppearance="@style/MyStyle.ActionBar.Title.Style"
            app:toolbarId="@+id/toolbar"
            android:layout_height="200dp"
            android:layout_width="match_parent"
            android:theme="@style/Theme.MedicineRemainder.AppBarOverlay">
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"/>
            <View
                android:background="#67000000"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <FrameLayout
                app:layout_collapseMode="parallax"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                >
                <LinearLayout
                    android:layout_marginBottom="10dp"
                    android:id="@+id/linearlayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center_horizontal"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal"
                    >
                    <ImageView
                        android:layout_marginStart="10dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_baseline_info_24"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        app:tint="@color/white" />
                    <TextView
                        android:layout_marginHorizontal="10dp"
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="Details a reminder that reminds you about refilling the medicines"
                        android:textColor="@android:color/white"
                        />
                </LinearLayout>
            </FrameLayout>
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>
    <androidx.core.widget.NestedScrollView
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.cardview.widget.CardView
            app:cardCornerRadius="5dp"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_marginStart="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_marginTop="24dp"
                    android:layout_alignParentTop="true"
                    android:id="@+id/medicine_type"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="Medicine Type"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <EditText
                        android:theme="@style/EditTextTheme"
                        style="@style/EditTextTheme"
                        android:text="@{refill.medicineType}"
                        android:id="@+id/medicine_type_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/medicine_type"
                    android:id="@+id/purpose"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="Purpose"
                        android:textColor="@color/black"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <EditText
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:theme="@style/EditTextTheme"
                        style="@style/EditTextTheme"
                        android:text="@{refill.purpose}"
                        android:maxLines="1"
                        android:id="@+id/purpose_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginBottom="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/purpose"
                    android:id="@+id/date_range"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="Course Range"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:layout_marginTop="8dp"
                        style="@style/EditTextTheme"
                        android:text="@{refill.startDate.concat(` - `).concat(refill.endDate)}"
                        android:id="@+id/selected_date_range"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>