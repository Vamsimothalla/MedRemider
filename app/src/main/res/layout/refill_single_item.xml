<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:layout_margin="8dp"
        app:cardCornerRadius="6dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="8dp"
        android:padding="0dp">

        <ImageView
            android:visibility="gone"
            android:id="@+id/imageView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/default_img" />
        <TextView
            android:id="@+id/medicine_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageView"
            android:layout_marginStart="13dp"
            android:layout_marginTop="2dp"
            android:layout_toEndOf="@+id/imageView"
            android:fontFamily="@font/mulish"
            android:text="Medicine Type : Medicine Type"
            android:textColor="#E8222222"
            android:textSize="14dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/purposeDosageTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/medicine_type"
            android:layout_alignStart="@+id/medicine_type"
            android:text="Purpose : Purpose"
            android:textColor="#E8222222"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/dateRange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/purposeDosageTv"
            android:layout_alignStart="@+id/medicine_type"
            android:text="Course Range : 10/11/2021 - 10/12/2021"
            android:textColor="#E8222222"
            android:textSize="14sp" />
    </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>